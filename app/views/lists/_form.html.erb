<div class="form">
	<%= form_for @list do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name, required: true %>
		<br>
		<%= f.label :description %>
		<%= f.text_field :description %>
		<br>
		<%= f.label :completed %>
		<%= f.select :completed, ['Yes', 'No'] %>
		<br>
		<%= f.submit %>
<% end %>
</div>
<hr>